	"item": [
		{
			"name": "Collections Data",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{base_url}}/analytics/collections.php?token={{token}}&date_from={{date_from}}&date_to={{date_to}}&account_code={{account_code}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"analytics",
						"collections.php"
					],
					"query": [
						{
							"key": "token",
							"value": "{{token}}",
							"description": "User authentication token (required)"
						},
						{
							"key": "date_from",
							"value": "{{date_from}}",
							"description": "Start date in YYYY-MM-DD format (optional)"
						},
						{
							"key": "date_to",
							"value": "{{date_to}}",
							"description": "End date in YYYY-MM-DD format (optional)"
						},
						{
							"key": "account_code",
							"value": "{{account_code}}",
							"description": "Account code to filter data (optional)"
						}
					]
				},
				"description": "Retrieves detailed collection/sales transaction data. Returns all data by default, can be filtered by date range and account code."
			},
			"response": []
		},
